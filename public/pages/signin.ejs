<!doctype html>
<html>
<head>
<title>Sign in</title>
<link rel="stylesheet" href="styles/home.css">
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script src="js/signin.js"></script>
</head>
<body>
<form id="#login_frm" action="signin" method="post">
<table id="signIn_tbl">
    <tr>
      <td colspan="2"><% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %></td>
    </tr>
    <tr>
      <td><label>Email</label></td>
      <td><input type="text" name="email"></td>
    </tr>
    <tr>
      <td><label>Password</label></td>
      <td><input type="password" name="password"></td>
    </tr>
    <tr>
      <td colspan="2"><button type="submit" class="btn">Login</button></td>
    </tr>
    <tr>
    <td colspan="2"><p>Need an account? <a id="signUp_lnk" href="#">Signup</a></p></td></tr>
      </div>
      </div>
</table>
</form>
</body>
</html>
