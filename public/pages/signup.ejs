<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
<title>Node Authentication</title>
<link rel="stylesheet" href="styles/home.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
<form id="signUp" action="signup" method="post">
<table id="signup_tbl">
  <tr>
    <td colspan="2"><% if (message.length > 0) { %>
      </h1>
      <div class="alert alert-danger"><%= message %></div>
      <% } %></td>
  </tr>
    <tr>
      <td><label>Email</label></td>
      <td><input type="email" class="form-control" name="email"></td>
    </tr>
    <!--<tr>
      <td><label>Verify email</label></td>
      <td><input type="email" class="form-control" name="verifyemail"></td>
    </tr>-->
    <tr>
      <td><label>Password</label></td>
      <td><input type="password" class="form-control" name="password"></td>
    </tr>
    <!--<tr>
      <td><label>Verify password</label></td>
      <td><input type="password" class="form-control" name="verifypassword"></td>
    </tr>-->
    <tr>
      <td><label>First name</label></td>
      <td><input type="text" class="form-control" name="firstname"></td>
    </tr>
    <tr>
      <td><label>Last name</label></td>
      <td><input type="text" class="form-control" name="lastname"></td>
    </tr>
    <tr>
      <td><label>Affilation</label></td>
      <td><input type="text" class="form-control" name="affiliation"></td>
    </tr>
    <tr>
      <td><label>City</label></td>
      <td><input type="text" class="form-control" name="city"></td>
    </tr>
    <tr>
      <td><label>Country</label></td>
      <td><input type="text" class="form-control" name="country"></td>
    </tr>
    <tr>
      <td colspan="2"><button type="submit" class="btn">Sign up</button></td>
    </tr>
</table>
</form>
</body>
</html>
